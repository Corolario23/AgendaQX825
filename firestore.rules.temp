rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // REGLAS TEMPORALES PARA CONFIGURACIÓN INICIAL
    // ⚠️ SOLO USAR PARA CONFIGURACIÓN, NO PARA PRODUCCIÓN
    
    // Permitir creación inicial de usuarios
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Permitir creación inicial de turnos
    match /turnos/{turnoId} {
      allow read, write: if request.auth != null;
    }
    
    // Permitir creación inicial de registros
    match /registros/{registroId} {
      allow read, write: if request.auth != null;
    }
    
    // Permitir creación inicial de historial
    match /historialCambios/{cambioId} {
      allow read, write: if request.auth != null;
    }
    
    // Permitir creación inicial de libro histórico
    match /libroHistorico/{registroId} {
      allow read, write: if request.auth != null;
    }
    
    // Regla por defecto - permitir todo para configuración
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
