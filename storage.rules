rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Reglas para reportes PDF - Solo usuarios autenticados con roles apropiados
    match /reportes/{reporteId} {
      allow read: if request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ["full", "edit", "view"];
      allow write: if request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ["full", "edit"];
      allow delete: if request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == "full";
    }
    
    // Reglas para archivos de turnos - Solo usuarios autenticados con roles apropiados
    match /turnos/{turnoId}/{fileName} {
      allow read: if request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ["full", "edit", "view"];
      allow write: if request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ["full", "edit"];
      allow delete: if request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == "full";
    }
    
    // Reglas para archivos de usuarios - Solo el propio usuario o administradores
    match /usuarios/{userId}/{fileName} {
      allow read: if request.auth != null && 
        (request.auth.uid == userId || 
         firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == "full");
      allow write: if request.auth != null && 
        (request.auth.uid == userId || 
         firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == "full");
      allow delete: if request.auth != null && 
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == "full";
    }
    
    // Regla por defecto - Denegar todo lo dem√°s
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
